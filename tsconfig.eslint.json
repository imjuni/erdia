{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    ".eslintrc.cjs",
    "**/__test__/**/*.ts",
    "**/__tests__/**/*.ts",
    "jest.config.cjs",
    ".configs/jest.setup.cjs"
  ],
  "exclude": [
    "node_modules",  
    "dist/**"
  ]
}
