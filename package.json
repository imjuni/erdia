{
  "name": "erdia",
  "version": "1.1.0",
  "description": "create mermaid.js er diagram using typeorm",
  "main": "dist/erdia.js",
  "types": "dist/erdia.d.ts",
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs",
    "script": "ts-node -r tsconfig-paths/register ",
    "dev": "ts-node src/erdia.ts",
    "dev:build": "ts-node -r tsconfig-paths/register dist/erdia.js",
    "debug": "node -r ts-node/register -r tsconfig-paths/register --inspect-brk src/erdia.ts",
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "prewebpack:prod": "npm run clean",
    "webpack:prod": "cross-env NODE_ENV=production webpack --config webpack.config.prod.cjs",
    "prewebpack:dev": "npm run clean",
    "webpack:dev": "cross-env NODE_ENV=production webpack --config webpack.config.dev.cjs",
    "prepub": "npm run webpack:prod",
    "pub": "npm publish --registry http://localhost:8901 --force",
    "prepub:prod": "npm run clean && npm run webpack:prod",
    "pub:prod": "npm publish",
    "lint": "eslint --ext ts,tsx ./src/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/erdia.git"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "erdia": "./dist/erdia.js"
  },
  "author": "ByungJoon Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imjuni/erdia/issues"
  },
  "homepage": "https://github.com/imjuni/erdia#readme",
  "devDependencies": {
    "@jest/test-sequencer": "^28.1.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "@types/source-map-support": "^0.5.4",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "better-sqlite3": "^7.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslint": "^6.1.3",
    "types-webpack-bundler": "^1.0.2",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0",
    "webpackbar": "^5.0.2"
  },
  "dependencies": {
    "@oclif/core": "^1.9.5",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "fast-safe-stringify": "^2.1.1",
    "fp-ts": "^2.11.9",
    "my-easy-fp": "^0.13.0",
    "my-node-fp": "^0.7.0",
    "prettier": "^2.6.1",
    "source-map-support": "^0.5.21",
    "tslib": "^2.3.1",
    "typeorm": "^0.3.7",
    "yargs": "^17.4.0"
  }
}