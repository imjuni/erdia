{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types/origin",
    "emitDeclarationOnly": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**/*", "**/__test__/**/*", "dist/**", "examples/**/*", "erdia-docs/**"],
  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  }
}
