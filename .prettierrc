{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "always",
  "parser": "typescript",
  "plugins": ["prettier-plugin-organize-imports"],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": [
        "**/__tests/expects/*"
      ],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "tsconfig.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [
        ".vscode/launch.json",
        ".vscode/settings.json"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}
